<div class="container mt-3">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved: </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model:@user do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :profile_image %><br />
          <%= f.file_field :profile_image, placeholder: "選択されていません", accept: "image/*" %>  
        </div>
        <div class="mb-3">
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>